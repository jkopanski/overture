{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    // This enables:
    // noImplicitAny
    // noImplicitThis
    // alwaysStrict
    // strictBindCallApply
    // strictNullChecks
    // strictFunctionTypes
    // strictPropertyInitialization
    "moduleResolution": "node",
    "preserveSymlinks": true
  }
}
