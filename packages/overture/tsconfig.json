{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2015",
    "module": "umd",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true
    // This enables:
    // noImplicitAny
    // noImplicitThis
    // alwaysStrict
    // strictBindCallApply
    // strictNullChecks
    // strictFunctionTypes
    // strictPropertyInitialization
  }
}
